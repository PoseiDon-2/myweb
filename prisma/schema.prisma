datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  fname     String
  lname     String
  email     String   @unique
  password  String   
  otp        String?  // รหัส OTP (nullable เพราะจะถูกลบหลังยืนยัน)
  isVerified Boolean  @default(false) // สถานะการยืนยัน
  createdAt DateTime @default(now())
}